.entry-page {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  min-width: 100%;
  z-index: -1;
  background-color: var(--color-bg-lightblue);
  &-fast-game-btn {
    position: fixed;
    top: 4rem;
    left: 3rem;
  }
  &-wave {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
  }
}
