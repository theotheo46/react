.error-informer {
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
  align-items: center;
  padding: 10%;

  & .error-code {
    padding: 30px;
    font-size: var(--font-header3-size);
  }

  & .error-text {
    padding: 20px;
    font-size: var(--font-header-size);
  }
  & .error-status {
    padding: 20px;
  }
}
