.theme-selector {
  position: fixed;
  top: 12px;
  right: 12px;
  display: inline-flex;
  gap: 0.5rem;
  padding: 2px 6px;
  border-radius: 20px;
  z-index: 5000;
  background-color: var(--color-bg-overlay);

  &__btn {
    background: none;
    cursor: pointer;
    border: none;
    opacity: 0.5;
    &:hover {
      opacity: 1;
    }
    &_active {
      opacity: 0.8;
    }
  }
}
