.profile-container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  width: 380px;
  margin-left: auto;
  margin-right: auto;
}

.success-text-message {
  text-align: center;
  color: var(--color-text-green);
  font-weight: 600;
  padding: 1rem 1rem;
  margin-bottom: 2rem;
  border: 2px solid var(--color-text-green);
  border-radius: var(--border-radius);
}
